{
	"type":"object",
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Scissr Syntax Tree",
	"name": "syntaxTree",
	"required": ["formatter","nodes","parser"],
	"id": "http://schemas.scissr.co/v1/syntax-tree.json",
	"properties":{
		"formatter": {
			"type":"string",
			"description": "Identifier for specific format generation",
			"required":false
		},
		"nodes": {
			"type":"array",
			"description": "Collection of nodes",
			"required":false,
			"properties":{
				"items": {
					"type":"array",
					"$ref": "#/definitions/node",
					"required":false
				}
			}
		},
		"parser": {
			"type":"string",
			"description": "Parser name",
			"required":false
		}
	},
	"definitions": {
		"node": {
			"id":"node",
			"type":"object",
			"name": "node",
			"required": ["key","alias"],
			"properties":{
				"key": {
					"type":"string",
					"description": "Node unique identifier"
				},
				"alias": {
					"type":"string",
					"description": "Friendly name for node"
				},
				"data": {
					"type":"array",
					"description": "Additional node attributes"
				},
				"nodes": {
					"type":"array",
					"items": {
						"type":"array",
						"$ref": "#/definitions/node",
						"required":false
					}
				}
			}
		}
	}
}
