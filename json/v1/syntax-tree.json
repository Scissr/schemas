{
	"title": "Scissr Syntax Tree",
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type":"object",
	"required": ["formatter","nodes","parser"],
	"id": "http://schemas.scissr.co/json/v1/syntax-tree.json",
	"properties": {
		"required": ["parser", "formatter", "nodes"],
		"formatter": {
			"type":"string",
			"enum": ["json","xml"]
		},
		"nodes": {
			"type":"array",
			"items": {
				"$ref": "#/definitions/node"
			}
		},
		"parser": {
			"type":"string"
		}
	},
	"definitions": {
		"nodeType": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string",
					"enum": ["string","bool","int","number","date"],
					"default": "string"
				},
				"isArray": {
					"type": "boolean",
					"default": false
				},
				"length": {
					"type": "integer",
					"default": 1
				}
			}
		},
		"node": {
			"type":"object",
			"required": ["resolver","type","alias"],
			"properties":{
				"resolver": {
					"type":"string",
					"enum": ["string","bool","int","number","date"]
				},
				"type": {
					"type": "object",
					"$ref": "#/definitions/nodeType"
				},
				"alias": {
					"type":"string"
				},
				"data": {
					"type":"object"
				},
				"nodes": {
					"type":"array",
					"items": {
						"$ref": "#/definitions/node"
					}
				}
			}
		}
	}
}
